<StackPane fx:id="container" prefHeight="380" prefWidth="640" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <VBox>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <TextArea id="taSend" prefHeight="200" prefWidth="640" wrapText="true">
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin></TextArea>
      <AnchorPane prefHeight="200.0" prefWidth="200.0">
         <children>
            <TextField id="tfTime" layoutX="421.0" layoutY="56.0" prefHeight="23.0" prefWidth="175.0" text="1000" />
            <Button id="btnSend" alignment="TOP_LEFT" layoutX="54.0" layoutY="35.0" mnemonicParsing="false" text="发送">
               <font>
                  <Font size="18.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <effect>
                  <Blend />
               </effect>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </Button>
            <Label alignment="CENTER" layoutX="287.0" layoutY="55.0" text="发送间隔（ms）">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Button id="btnStop" alignment="TOP_LEFT" layoutX="172.0" layoutY="36.0" mnemonicParsing="false" text="停止">
               <font>
                  <Font size="18.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <effect>
                  <Blend />
               </effect>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </Button>
         </children>
      </AnchorPane>
    </VBox>

</StackPane>
